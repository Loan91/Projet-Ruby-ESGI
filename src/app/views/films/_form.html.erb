<%= form_with(model: film, local: true) do |form| %>

<% if film.errors.any? %>
<div>
    <h2>There is <%= pluralize(film.errors.count, 'error') %></h2>
    <ul>
        <% film.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="mt-4">
    <div class="form-group row">
        <%= form.label :titre, value: "Titre du film :", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.text_field :titre, placeholder: "Star wars", class: "form-control" %>
        </div>
    </div>

    <div class="form-group row">
        <%= form.label :date_sortie, value: "Date de sortie :", wrapper_html: { class: "inline_field_wrapper" }, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.date_field :date_sortie, class: "form-control" %>
        </div>
    </div>

    <div class="form-group row">
        <%= form.submit :submit, value: "Sauvegarder", class: "btn btn-success mx-auto" %>
    </div>
</div>

<% end %>