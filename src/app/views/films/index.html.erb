<div class="container-fluid">
    <h1>Gestion des films <%= link_to "Ajouter un nouveau film", new_film_path, class: 'btn btn-sm btn-success text-white' %></h1>

    <div class="table-responsive mt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre du film</th>
                    <th>Date de sortie</th>
                    <th colspan="3">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @films.each do |film| %>
                    <tr>
                        <td><%= film.id %></td>
                        <td><%= film.titre %></td>
                        <td><%= film.date_sortie %></td>
                        <td><%= link_to('Afficher', film, class: 'text-primary') %></td>
                        <td><%= link_to('Modifier', edit_film_path(film), class: 'text-warning') %></td>
                        <td><%= link_to('Supprimer', film, method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer le film ?' }, class: 'text-danger') %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>

</div>