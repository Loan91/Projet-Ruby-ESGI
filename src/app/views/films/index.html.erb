<p><%= notice %></p>

<h1 class='btn btn-danger'>Films</h1>

<table>
    <thead>
        <tr>
            <th>Titre</th>
            <th>Date de sortie</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @films.each do |film| %>
            <tr>
                <td><%= film.titre %></td>
                <td><%= film.date_sortie %></td>
                <td><%= link_to('Show', film) %></td>
                <td><%= link_to('Edit', edit_film_path(film)) %></td>
                <td><%= link_to('Delete', film, method: :delete, data: { confirm: 'Supprimer ?' }) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to "New film", new_film_path %>