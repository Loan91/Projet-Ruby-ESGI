<%= form_with(model: location, local: true) do |form| %>

<% if location.errors.any? %>
<div>
    <h2>There is <%= pluralize(location.errors.count, 'error') %></h2>
    <ul>
        <% location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="mt-4">
    <div class="form-group row">
        <%= form.label :titre, value: "Choisir un film :", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">

            <select name=videotheque>
                <% @videotheques.each do |videotheque| %>
                            <option value="<%=videotheque.id%>"><%= videotheque.id %></option>

               <% end %>
           </select>

        </div>
    </div>

    <div class="form-group row">
        <%= form.label :date_emprunt, value: "Date de sortie :", wrapper_html: { class: "inline_field_wrapper" }, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.date_field :date_emprunt, class: "form-control" %>
        </div>
    </div>

    <div class="form-group row">
        <%= form.submit :submit, value: "Sauvegarder", class: "btn btn-success mx-auto" %>
    </div>
</div>
<% end %>